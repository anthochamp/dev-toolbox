{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:best-practices",
		":automergeLinters",
		":automergeStableNonMajor",
		":combinePatchMinorReleases",
		":disableRateLimiting",
		":rebaseStalePrs",
		":respectLatest",
		"mergeConfidence:all-badges",
		":prConcurrentLimitNone",
		"group:allNonMajor",
		"group:allDigest",
		"schedule:automergeWeekends",
		"schedule:weekly"
	],
	"labels": ["dependencies"],
	"packageRules": [
		{
			"groupName": "AC GitHub Repositories",
			"matchDatasources": ["github-tags"],
			"matchPackageNames": ["anthochamp/*"],
			"automerge": true,
			"automergeType": "branch",
			"automergeSchedule": ["* * * * *"]
		},
		{
			"groupName": "AC NPM Packages",
			"matchDatasources": ["npm"],
			"matchPackageNames": ["@ac-essentials/*"],
			"automerge": true,
			"automergeType": "branch",
			"automergeSchedule": ["* * * * *"]
		},
		{
			"groupName": "AC Dart Packages",
			"matchDatasources": ["dart"],
			"matchPackageNames": ["ac_*"],
			"automerge": true,
			"automergeType": "branch",
			"automergeSchedule": ["* * * * *"]
		},
		{
			"groupName": "Base Container Images",
			"matchDatasources": ["docker"],
			"matchPackageNames": [
				"alpine",
				"debian",
				"ubuntu",
				"node",
				"python",
				"golang",
				"openjdk",
				"php"
			],
			"automerge": true,
			"automergeType": "branch"
		}
	]
}
